Class Detpack : Ammo
{
    Default {
        Inventory.PickupMessage "Got a detpack!";
        Inventory.Amount 1;
        Inventory.MaxAmount 1;
        Inventory.Icon "CLIPA0";
        Ammo.BackpackAmount 1;
        Ammo.BackpackMaxAmount 1;
    }

    States
    {
        Spawn:
            CLIP A -1;
            Stop;
    }
}

Class DroppedDetpack : Ammo
{
    Default {
        Inventory.PickupMessage "Got a (dropped) detpack!";
        Inventory.Amount 0;
        Inventory.MaxAmount 1;
        Inventory.Icon "CLIPA0";
        Ammo.BackpackAmount 0;
        Ammo.BackpackMaxAmount 0;
    }

    States
    {
        Spawn:
            CLIP A -1;
            Stop;
    }
}

Class DetpackFloor : Actor
{
    Default {}
    States {
        Spawn:
            CLIP A 1 nodelay;
            Goto Idle;
        Idle:
            CLIP A -1;
            Loop;
        Death:
            MISL B 8 BRIGHT {
                A_Explode(1000, 200, XF_EXPLICITDAMAGETYPE, false, 128);
            }
            Stop;
    }
}

Class DetpackProjectile : Grenade
{
    Default {
        Gravity 0.5;
        Speed 6;
        BounceFactor 0.01;
        WallBounceFactor 0.01;
        BounceType "Hexen";
        BounceCount 3;
        Friction 5;
        Damage 0;
    }

    States
    {
        Death:
            TNT1 A 1 {
                Spawn("DetpackFloor", pos, NO_REPLACE);
            }
            Stop;
    }
}

Class DetpackHand : Pistol
{
    Default {
        Weapon.SlotNumber 2;
        Weapon.AmmoType1 "Detpack";
        Weapon.AmmoGive1 1;
        Weapon.AmmoType2 "DroppedDetpack";
        Weapon.AmmoGive2 0;
        Weapon.AmmoUse1 1;
        Weapon.AmmoUse2 1;
        +Weapon.NoAlert;
        +Weapon.NOALERT;
    }

    States
    {
        Ready:
            TNT1 A 0 A_JumpIfNoAmmo("ReadyTrigger");
            DTPA A 1 A_WeaponReady;
            Loop;
        ReadyTrigger:
            DTTA A 1 A_WeaponReady;
            Loop;
        Deselect:
            TNT1 A 0 A_JumpIfNoAmmo("DeselectTrigger");
            DTPA A 1 A_Lower;
            Loop;
        DeselectTrigger:
            DTTA A 1 A_Lower;
            Loop;
        Select:
            TNT1 A 0 A_JumpIfNoAmmo("SelectTrigger");
            DTPA A 1 A_Raise;
            Loop;
        SelectTrigger:
            DTPT A 1 A_Raise;
            Loop;
        Fire:
            // drop detpack
            TNT1 A 0 A_JumpIfNoAmmo("NoAmmo");
            TNT1 A 0 A_PlayWeaponSound("weapons/DTPArm");
            DTPA A 1;
            DTPA B 1;
